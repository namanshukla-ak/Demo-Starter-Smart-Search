# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=neurologix-assessments
AWS_RDS_ENDPOINT=your-rds-endpoint.amazonaws.com
AWS_OPENSEARCH_ENDPOINT=your-opensearch-endpoint.amazonaws.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=neurologix_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# API Configuration
API_BASE_URL=http://localhost:8000
API_VERSION=v1

# Frontend Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# OpenAI/LLM Configuration (if using external LLM)
OPENAI_API_KEY=your_openai_key_here
LLM_MODEL=gpt-3.5-turbo

# Development Settings
DEBUG=True
TESTING=False
